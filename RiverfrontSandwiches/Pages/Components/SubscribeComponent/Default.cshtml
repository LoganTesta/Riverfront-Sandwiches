
@model string
@using Microsoft.AspNetCore.Html;

<div class="footer__subscribe">
    <h3 class="footer__subscribe-subheader">Subscribe For News and Special Coupons Here!</h3>
    <form id="subscribeForm" class="form" name="footer__subscribe-form" onsubmit="return validateSubscribeForm();" method="post">
        <div class="form__input-container">
            <label class="form__label subscribe__label" for="userNameSubscribe">Your Name</label>
            <input class="form__input" type="text" id="userNameSubscribe" name="userNameSubscribe" value="" />
            <div class="clear-both"></div>
        </div>
        <div class="form__input-container">
            <label class="form__label subscribe__label" for="userEmailSubscribe">Your Email</label>
            <input class="form__input" type="text" id="userEmailSubscribe" name="userEmailSubscribe" value="" />
            <div class="clear-both"></div>
        </div>
        <div class="form__input-container">
            <input type="submit" asp-page-handler="SubscribeSection" class="footer__subscribe-button" id="subscribeButton" name="subscribeButton" value="Get Coupons" />
            <div class="clear-both"></div>
        </div>
        <div class="javascript-validation-results-subscribe"></div>
        <div class="subscribe-form-response">
            @(new HtmlString("" + @Model))
        </div>
    </form>
</div>
<script type="text/javascript" src="assets/javascript/subscribe-form-validation.js?mod=10082019"></script>