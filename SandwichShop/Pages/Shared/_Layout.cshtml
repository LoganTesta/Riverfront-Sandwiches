@{
    int currentYear = DateTime.Now.Year;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="keywords" content="sandwich, bagel, Portland, Oregon, ham, grilled cheese, egg, veggie, bacon, custom sandwich." />
    <meta name="description" content="The place for a hearty and satisfying sandwich!  We serve sandwiches, bagels, and more!" />
    <title>@ViewData["Title"] - Riverfront Sandwiches</title>

    <environment include="Development, Production">
        <link rel="icon" type="image/png" href="/assets/images/favicon.png" />
        <link href="https://fonts.googleapis.com/css?family=Lato:400,700" rel="stylesheet">
        <link rel="stylesheet" href="~/assets/css/main-styles.css?mod=08212020" />
        <link rel="stylesheet" href="~/assets/css/print-styles.css?mod=09232019" media="print" />
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css" integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">
    </environment>
    <environment exclude="Development">
    </environment>
</head>
<body>
    <div class="body-wrapper">
        <header class="header">
            <div class="header__background"></div>
            <div class="header__semi-opaque-background-left"></div>
            <div class="header__semi-opaque-background-right"></div>
            <div class="inner-wrapper">
                <div class="main-title-container">
                    <h1><a href="/Index" class="main-title__title">Riverfront <span class="main-title__word-two">Sandwiches</span></a></h1>
                </div>
                <div class="logo-container">
                    <a href="/index">
                        <img src="~/assets/images/logo.png" alt="Riverfront Sandwiches logo" />
                    </a>
                </div>
            </div>
        </header>
        <div class="inner-wrapper">
            <nav>
                <div class="nav mobile-nav" id="mobileNav">
                    <div class="nav__nav-list-container">
                        <div class="nav__nav-list">
                            <div class="nav__nav-row">
                                <div class="nav__nav-item"><a class="nav__nav-link" asp-page="/About">About</a></div>
                                <div class="nav__nav-item"><a class="nav__nav-link" asp-page="/Food">Food!</a></div>
                                <div class="nav__nav-item"><a class="nav__nav-link" asp-page="/Beverages">Beverages</a></div>
                            </div>
                            <div class="nav__nav-row">
                                <div class="nav__nav-item"><a class="nav__nav-link" asp-page="/Events">Events</a></div>
                                <div class="nav__nav-item"><a class="nav__nav-link" asp-page="/Contact">Contact</a></div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="nav desktop-nav" id="desktopNav">
                    <div class="nav__nav-list-container">
                        <div class="nav__nav-list">
                            <div class="nav__nav-item"><a class="nav__nav-link" asp-page="/Index">Home</a></div>
                            <div class="nav__nav-item"><a class="nav__nav-link" asp-page="/About">About Us</a></div>
                            <div class="nav__nav-item"><a class="nav__nav-link" asp-page="/Food">Food!</a></div>
                            <div class="nav__nav-item"><a class="nav__nav-link" asp-page="/Beverages">Beverages</a></div>
                            <div class="nav__nav-item"><a class="nav__nav-link" asp-page="/Events">Events</a></div>
                            <div class="nav__nav-item"><a class="nav__nav-link" asp-page="/Contact">Contact Us</a></div>
                        </div>
                    </div>
                </div>
            </nav>
        </div>
        <div class="inner-wrapper">
            <div class="content">
                @RenderBody()
            </div>
        </div>
        <footer class="footer">
            <div class="inner-wrapper">
                <div class="footer__additional-wrapper">
                    <div class="footer__copyright">&copy; @currentYear Riverfront Sandwiches.  All Rights Reserved.</div>
                    <div class="footer__locations">Locations: SW Portland, SE Portland, Hillsboro, West Slope.</div>
                    <div class="footer__phone">503-332-2198</div>
                    <div class="content-row">
                        <div class="col-sma-3">
                            <div class="footer__general-info">
                                <p>Custom in-house sandwiches</p>
                                <p>Fresh smoothies</p>
                                <p>Made fresh daily!</p>
                            </div>
                        </div>
                        <div class="col-sma-2">
                            <div class="footer__nav">
                                <div class="footer__nav-list">
                                    <div class="footer__nav-item"><a class="footer__nav-link" asp-page="/Index">Home</a></div>
                                    <div class="footer__nav-item"><a class="footer__nav-link" asp-page="/About">About Us</a></div>
                                    <div class="footer__nav-item"><a class="footer__nav-link" asp-page="/Food">Food!</a></div>
                                    <div class="footer__nav-item"><a class="footer__nav-link" asp-page="/Beverages">Beverages</a></div>
                                    <div class="footer__nav-item"><a class="footer__nav-link" asp-page="/Events">Events</a></div>
                                    <div class="footer__nav-item"><a class="footer__nav-link" asp-page="/Contact">Contact Us</a></div>
                                </div>
                            </div>
                        </div>
                        <div class="col-sma-3">
                            <div class="footer__social">
                                <div class="footer__social-item">
                                    <a href="/">
                                        <i class="fab fa-facebook-f fa-2x social-icon"><span class="sr-only">Facebook</span></i>
                                    </a>
                                </div>
                                <div class="footer__social-item">
                                    <a href="/">
                                        <i class="fab fa-pinterest fa-2x social-icon"><span class="sr-only">Pinterest</span></i>
                                    </a>
                                </div>
                                <div class="footer__social-item">
                                    <a href="/">
                                        <i class="fab fa-instagram fa-2x social-icon"><span class="sr-only">Instagram</span></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="col-sma-4">
                            <div class="footer__hours">
                                <span class="footer-hours__open-times">Open 10am-9pm Monday-Sunday</span>
                                @await Component.InvokeAsync("SubscribeComponent")
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </footer>
    </div>

    <environment include="Development, Production">
        <script src="~/assets/javascript/javascript-functions.js"></script>
    </environment>

    <environment include="Development"></environment>
    <environment exclude="Development"></environment>

    @RenderSection("Scripts", required: false)
</body>
</html>
